<UserControl
     x:Class="Flow.Launcher.Plugin.KomorebiWorkspaceNamer.UserConfig.SettingsControl"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     d:DesignHeight="300"
     d:DesignWidth="300"
     mc:Ignorable=" d" 
     d:DataContext="{d:Flow.Launcher.Plugin.KomorebiWorkspaceNamer.UserConfig.Settings }">

    <Grid Margin="10">
        <Grid.ColumnDefinitions />
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0">Workspace index style</TextBlock>
        <ListBox 
            Name="IndexingStyleLb"
            Grid.Row="1"
            Width="auto" 
            Height="auto" 
            SelectionChanged="SetIndexingStyle" 
            SelectionMode="Single"/>
    </Grid>
</UserControl>