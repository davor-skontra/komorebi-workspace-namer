<UserControl
     x:Class="Flow.Launcher.Plugin.KomorebiWorkspaceNamer.UserConfig.SettingsControl"
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
     d:DesignHeight="300"
     d:DesignWidth="300"
     mc:Ignorable=" d" 
     d:DataContext="{d:Flow.Launcher.Plugin.KomorebiWorkspaceNamer.UserConfig.Settings }">

    <Grid Margin="10">
        <Grid.ColumnDefinitions />
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center">
            <TextBlock>Comma separated list of predefined names</TextBlock>
            <TextBox 
                Width="auto" 
                Name="PredefinedNamesTb"
                TextChanged="OnTextChanged"
                Loaded="OnPredefinedNamesTbLoaded"
                />
        </StackPanel>
        <TextBlock Grid.Row="1">Workspace index style</TextBlock>
        <ListBox 
            Name="IndexingStyleLb"
            Grid.Row="2"
            Width="auto" 
            Height="auto"
            SelectionChanged="SetIndexingStyle" 
            SelectionMode="Single"
            Loaded="OnIndexingStyleLoaded"
            />
    </Grid>
</UserControl>